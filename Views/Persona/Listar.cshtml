@model List<PersonModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Personas
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Persona" class="btn btn-success">Agregar Persona</a>
        <hr/>
        <table class="table table-bordered">
            <thead>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Fecha nacimiento</th>
                <th>Genero</th>
                <th>Estado</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.first_name</td>
                        <td>@item.last_name</td>
                        <td>@item.birth_date</td>
                        <td>@item.gender</td>
                        <td>@item.status</td>
                        <td><a asp-action="Editar" asp-controller="Persona" class="btn btn-primary  btn-sm" asp-route-id="@item.id" >Editar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

